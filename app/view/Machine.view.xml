<mvc:View
    height="100%"
    controllerName="myapp.controller.Machine"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    
    <Page
        showHeader="false"
        enableScrolling="false"
        class="sfondotiles"  		title="Centered Title"
    >

        <VBox  alignItems="Center"
              justifyContent="Start">            
            <Text text="Select an available Machine: Area {modelArea>/area}" class="cent"/> 
            <Button icon="sap-icon://home" press="navToMain" class="homeButton"/>
        </VBox>            
        <TileContainer
            id="container"
            tileDelete="handleTileDelete"
            tiles="{/}">
            <StandardTile
                icon="{icon}"
                type="Monitor"
                number="{machinetypedescription}" 
                title="{workcenter}"
                info="{info}"
                infoState="{status}"
                press="navToShoporder"
                numberUnit="Machine"
            />
        </TileContainer>
  

        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Welcome {/0/user}!" press="handleEditPress" />
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
