<mvc:View
    height="100%"
    controllerName="myapp.controller.Machine"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    
    
    <Page
        title="Seleziona un centro di lavoro: Area {modelArea>/area}"
        class="sapUiContentPadding myapp"
        showNavButton="true" 
    >

        <headerContent>
            <Button icon="sap-icon://action" tooltip="Share" />
        </headerContent>


           
        <TileContainer
            id="container"
            tileDelete="handleTileDelete"
            tiles="{/}">
            <StandardTile
                icon="{icon}"
                type="Monitor"
                number="{machinetypedescription}" 
                title="{workcenter}"
                info="{info}"
                infoState="{status}"
                press="navToShoporder"
                numberUnit="Machine"
                class="allarga"
            />
        </TileContainer>
  

        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Welcome {/0/user}!" press="handleEditPress" />
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
