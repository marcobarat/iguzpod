<mvc:View controllerName="myapp.controller.Main" xmlns:t="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">
    <l:VerticalLayout width="100%">
        <l:content>
            <Panel class="sapUiDemoFlexBoxSizeAdjustments">
                <headerToolbar>
                    <Toolbar>
                        <Title level="H2" text="My First POD" />
                    </Toolbar>
                </headerToolbar>
                <FlexBox alignItems="Start">
                    <items>
                        <l:VerticalLayout width="100%">
                            <l:content>
                                <FlexBox alignItems="Start" direction="Column" class="daghespazio">
                                    <items>
                                        <Label text=""></Label>
                                        <Button id="start" text="Start" type="Emphasized" class="sapUiSmallMarginEnd" press="understand">
                                            <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Button>
                                        <Button id="stop" text="Stop" type="Emphasized" class="sapUiSmallMarginEnd" press="understand">
                                            <layoutData>
                                                <FlexItemData growFactor="2" />
                                            </layoutData>
                                        </Button>
                                        <Button text="Log DC" type="Emphasized" class="sapUiSmallMarginEnd">
                                            <layoutData>
                                                <FlexItemData growFactor="3" />
                                            </layoutData>
                                        </Button>
                                        <Button text="Log NC" type="Emphasized" class="sapUiSmallMarginEnd">
                                            <layoutData>
                                                <FlexItemData growFactor="4" />
                                            </layoutData>
                                        </Button>
                                        <Button text="Assembly" type="Emphasized" class="sapUiSmallMarginEnd">
                                            <layoutData>
                                                <FlexItemData growFactor="5" />
                                            </layoutData>
                                        </Button>
                                        <Button text="Log comment" type="Emphasized" class="sapUiSmallMarginEnd">
                                            <layoutData>
                                                <FlexItemData growFactor="6" />
                                            </layoutData>
                                        </Button>
                                    </items>
                                </FlexBox>
                            </l:content>
                        </l:VerticalLayout>
                        <t:Table rows="{/ProductCollection}" title="Products" selectionMode="MultiToggle" visibleRowCount="7" width="100%">
                            <t:columns>
                                <t:Column width="11rem">
                                    <Label text="Product Name" />
                                    <t:template>
                                        <Text text="{Name}" />
                                    </t:template>
                                </t:Column>
                                <t:Column width="11rem">
                                    <Label text="Product Id" />
                                    <t:template>
                                        <Input value="{ProductId}" />
                                    </t:template>
                                </t:Column>
                                <t:Column width="6rem" hAlign="End">
                                    <Label text="Quantity" />
                                    <t:template>
                                        <Label text="{Quantity}" />
                                    </t:template>
                                </t:Column>
                                <t:Column width="9rem">
                                    <Label text="Status" />
                                    <t:template>
                                        <ObjectStatus text="{Status}" state="{         path: 'Available',         formatter: '.formatAvailableToObjectState'        }" />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>
                    </items>
                </FlexBox>
            </Panel>
        </l:content>
    </l:VerticalLayout>
</mvc:View>