            <HBox>
                <Image
                    src="images/iguzlogo.png"
                    width="10%"
                    densityAware="false"
                class="centerimage">
                </Image>
            </HBox>		
        </headerContent>

	
        <content>
            
            <VBox>

                <VBox width="100%" class="lowerInput"></VBox>
                <VBox height="100%" width="100%">
                    <HBox>
                        <!-- <Label text="Andon:" class="sapUiSmallMarginBegin sapUiSmallMarginEnd labelAndon"/>
                        <Text text="{gingo>/shift}" class="sapUiSmallMarginEnd textAndon"/> -->
                        <Label text="Temperature Monitor for Workcenter 1 >  " class="cent2"/>
                        <Text text=" {gingo>/datetime}" class="cent2"/>
                    </HBox>
                    <html:div id="chartBox" class="opacity" />
                </VBox>
            </VBox>

        </content>
    </Page>
</mvc:View>
