<mvc:View
    height="100%"
    controllerName="myapp.controller.Shoporder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page
        showHeader="false"
        enableScrolling="false" 
        showNavButton="true"
        class="sfondotiles"        >
        <VBox  alignItems="Center"
              justifyContent="Start">            
            <Text text="Select a ShopOrder:" class="cent"/> 
        </VBox>   
        <TileContainer
            id="container"
            tileDelete="handleTileDelete"
            tiles="{/}">

            <StandardTile
                icon="{icon}"
                type="Monitor"
                number="{QtyOrdered}"
                numberUnit="Qty Ordered"
                title="{ShopOrder}"
                info="{info}"
                infoState="{status}"
                press="apriDialog"
                idshoporder="{id}"
            />
        </TileContainer>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Back" press="onNavBack" />
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
