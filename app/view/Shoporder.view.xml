<mvc:View
    height="100%"
    controllerName="myapp.controller.Shoporder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page
        title="Seleziona un Ordine di Lavoro"
        class="sapUiContentPadding myapp"
        showNavButton="true" 
    >

        <headerContent>
            <Button icon="sap-icon://action" tooltip="Share" />
        </headerContent>
  
        <TileContainer
            id="container"
            tileDelete="handleTileDelete"
            class="allarga"

            tiles="{/}"
        >

            <StandardTile
                icon="{icon}"
                type="Monitor"
                number="{QtyOrdered}"
                numberUnit="OdL: {ShopOrder}"
                title="Prodotto finito {Material}"
                info="{info}"
                infoState="{status}"
                press="apriDialog"
                idshoporder="{id}"
                class="allarga"

            />
        </TileContainer>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Back" press="onNavBack" />
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
