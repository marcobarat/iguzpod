<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog
        id="helloDialog2"
        title="Logged DC"
    class="scaled">
        <l:VerticalLayout
            class="sapUiContentPadding"
            width="1200px">
            <l:content>
                <!-- <List
                    items="{/}"
                    headerText="Lista fasi">
                    <items>
                        <ObjectListItem
                            title="{stepid}"
                            type="Active"
                            number="{Description}"
                            press="goToPod">

                        </ObjectListItem>
                    </items>
                </List> -->
                
                <Table id="dataid"
                       inset="false"
                       items="{
			path: '/',
			sorter: {
				path: '{DCGroup}'
			}
		}">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Logged DataCollections" level="H2"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column
                            width="12em" 
                            hAlign="Center">
                            <Text text="Categoria" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            hAlign="Center"
                            demandPopin="true">
                            <Text text="Parametro" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            hAlign="Center">
                            <Text text="UnitÃ  di misura" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            hAlign="Center">
                            <Text text="Valore max" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            hAlign="Center">
                            <Text text="Valore min" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            hAlign="Center">
                            <Text text="Valore" />
                        </Column>
                        <Column
                            hAlign="Center">
                            <Text text="Data" />
                        </Column>
                        <Column
                            hAlign="Center">
                            <Text text="Commento" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier
                                    title="{DCGroup}"
                                    text="{DCGroup}"/>
                                <Text
                                    text="{ParameterName}" />
                                <Text
                                    text="{UnitOfMeasure}" />
                                <Text
                                    text="{MaxValue}" />
                                <Text
                                    text="{MinValue}" />
                                <ObjectNumber
                                    number="{Value}"
                                    unit="{UnitOfMeasure}"
                                />
                                <Text text="{Date}"/>
                                <Text text="{Comment}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                
                
            </l:content>

            <OverflowToolbar id="otb2">
                <ToolbarSpacer/>
                <Button text="Close" press="onExitDC" class="closeButton"/>

            </OverflowToolbar>
        </l:VerticalLayout>
    </Dialog>
</core:FragmentDefinition>
